<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <local:ComboBoxItemConverter x:Key="ComboBoxItemConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox SelectedItem="{Binding MySelectedChar, Mode=OneWayToSource, Converter={StaticResource ComboBoxItemConverter}, FallbackValue=a}">
            <ComboBox.Items>
                <ComboBoxItem Content="a"/>
                <ComboBoxItem Content="b" IsSelected="True"/>
                <ComboBoxItem Content="c"/>
            </ComboBox.Items>
        </ComboBox>

        <ListView Grid.Row="1" x:Name="SourceList" ItemsSource="{Binding MyItems}" SelectionMode="Multiple"/>
        <ListView Grid.Row="2" ItemsSource="{Binding ElementName=SourceList, Path=SelectedItems}"/>
    </Grid>
</Window>
